<!--includeing header section from the header.ejs-->
<%- include ../partials/header.ejs %>
<!--includeing main naviation section from the main_nav.ejs-->
<%- include ../partials/main_nav.ejs %>

 <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            
            <h1 class="display-5">Welcome to the <%= title %> Page</h1> 
            <br><br>
            <% if(typeof displayName == 'string' && displayName) { %>
             <a href="/contact-list/add" class="btn btn-primary" role="button">
             <i class="fas fa-plus-circle"></i> Add a Business Contact</a>
             <% } %>
          
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                <% if(typeof displayName == 'string' && displayName) { %>               
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Number</th>
                    <th class="text-center col-4">Email</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>    
                <% } else { %>
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-3">Number</th>
                    <th class="text-center col-5">Email</th>
                <% } %>

                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>                  
                        <td class="text-center col-2"><%= ContactList[count].name %></td>
                        <td class="text-center col-2"><%= ContactList[count].number %></td>
                        <td class="text-center col-4"><%= ContactList[count].email %></td>           
                            <td class="text-center col-1">
                            <a href="/contact-list/update/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Update </a>
                            </td>                           
                            <td class="text-center col-1">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>                            
                            </td>
                        <% } else {%>
                            <td class="text-center col-2"><%= ContactList[count].name %></td>
                            <td class="text-center col-3"><%= ContactList[count].number %></td>
                            <td class="text-center col-5"><%= ContactList[count].email %></td> 
                        <% } %>  
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
<br><br><br><br><br><br>

<!--includeing bottom naviation section from the bottom_nav.ejs-->
<%- include ../partials/bottom_nav.ejs %>
<!--includeing footer section from the footer.ejs-->
<%- include ../partials/footer.ejs %>



